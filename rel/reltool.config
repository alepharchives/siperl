{sys, [
       {lib_dirs, ["../lib", "../deps"]},
       {rel, "sipnode", "1",
        [
         kernel,
         stdlib,
         sasl,
         gproc,
         sip
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "sipnode"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {app, sasl, [{incl_cond, include}]},
       {app, sip, [{incl_cond, include}]}
      ]}.

{target_dir, "sipnode"}.

{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "{{erts_vsn}}/bin/erl"},
           {copy, "files/nodetool", "{{erts_vsn}}/bin/nodetool"},
           {copy, "files/sipnode", "bin/sipnode"},
           {copy, "files/app.config", "etc/app.config"},
           {copy, "files/vm.args", "etc/vm.args"}
           ]}.
